<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HammerSystemsTestTask" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@color/grey_bottom_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.HammerSystemsTestTask" parent="Base.Theme.HammerSystemsTestTask" />

    <style name="BottomNavigationViewTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/inter_med</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/sf_pro_semi</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DefaultChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="chipBackgroundColor">@color/chip_background_state</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="rippleColor">@null</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="textStartPadding">23dp</item>
        <item name="textEndPadding">23dp</item>
    </style>
</resources>